{
  "name": "@spellstack/engine",
  "version": "1.0.0",
  "description": "Pure TypeScript SpellStack game engine",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
